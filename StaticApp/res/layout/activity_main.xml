<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    >


<RelativeLayout 
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="organic.myorganic.MainActivity" >

    <Button
        android:id="@+id/btnasian"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/btnartichokes"
        android:layout_below="@+id/btnartichokes"
        android:layout_marginTop="16dp"
        android:background="#81C784"
        android:onClick="Tap"
        android:text="Asian Green"
        android:textColor="#DD2C00"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btncauliflower"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/btnblackberries"
        android:layout_below="@+id/btnblackberries"
        android:layout_marginTop="14dp"
        android:background="#81C784"
        android:onClick="Tap"
        android:text="Cauliflower"
        android:textColor="#DD2C00"
        android:layout_marginBottom="5dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnblackberries"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/btnasian"
        android:layout_below="@+id/btnasian"
        android:layout_marginTop="15dp"
        android:background="#81C784"
        android:onClick="Tap"
        android:text="Blackberries"
        android:textColor="#DD2C00"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnartichokes"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="#81C784"
        android:onClick="Tap"
        android:text="Artichokes"
        android:textColor="#DD2C00"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:text="m-Organic"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="150px"
        android:onClick="Tap5"
        android:layout_alignLeft="@+id/btnartichokes"
        android:layout_alignParentTop="true"
        android:src="@drawable/imgthree" />

    <ImageView
        android:id="@+id/twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:onClick="Tap5"
        android:layout_alignTop="@+id/facebook"
        android:layout_toRightOf="@+id/facebook"
        android:src="@drawable/twitter" />

    <ImageView
        android:id="@+id/facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:onClick="Tap5"
        android:layout_alignTop="@+id/youtube"
        android:layout_toRightOf="@+id/youtube"
        android:src="@drawable/fb" />

    <ImageView
        android:id="@+id/gplus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:onClick="Tap5"
        android:layout_alignTop="@+id/twitter"
        android:layout_toRightOf="@+id/twitter"
        android:src="@drawable/gplus" />

    <ImageView
        android:id="@+id/youtube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:onClick="Tap5"
        android:layout_below="@+id/btncauliflower"
        android:layout_toLeftOf="@+id/textView2"
        android:src="@drawable/youtube" />

</RelativeLayout>
</ScrollView>